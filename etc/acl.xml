                        <resource id="Ksolves_MultivendorMarketplace::seller_report_reasons" title=" Report Seller Reaons" sortOrder="20" />
                    </resource>
                    <resource id="Ksolves_MultivendorMarketplace::manage_product_attribute" title="Manage Seller Product Attributes" sortOrder="70">
                        <resource id="Ksolves_MultivendorMarketplace::default_attribute" title="Default" sortOrder="10" />
                        <resource id="Ksolves_MultivendorMarketplace::custom_attribute" title="Custom" sortOrder="20" />
                    </resource>
                    <resource id="Ksolves_MultivendorMarketplace::settings" title="Settings" sortOrder="80">
                        <resource id="Ksolves_MultivendorMarketplace::configurations" title="Configurations" sortOrder="10" />
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Ksolves_MultivendorMarketplace::config_multivendor" title="Ksolves MultiVendor"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
